{
    "name": "verify",
    "version": "0.0.2",
    "author": "Michael Hanus <mh@informatik.uni-kiel.de>",
    "synopsis": "A tool to support the verification of Curry programs",
    "category": [ "Verification" ],
    "dependencies": {
        "cass-analysis": ">= 0.0.1",
        "cass"         : ">= 0.0.1",
        "currycheck"   : ">= 1.0.0",
        "rewriting"    : ">= 0.0.1"
    },
    "exportedModules": [ "ToVerifier", "VerifyOptions", "ToAgda" ],
    "configModule": "VerifyPackageConfig",
    "executable": {
        "name": "curry-verify",
        "main": "ToVerifier"
    },
    "testsuite": {
        "src-dir": "examples",
        "modules": [ "TestVerify" ]
    },
    "source": {
        "git": "https://git.ps.informatik.uni-kiel.de/curry-packages/verify.git",
        "tag": "$version"
    }
}
